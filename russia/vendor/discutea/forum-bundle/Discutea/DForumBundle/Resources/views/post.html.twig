{% block body %}
    <div class="wrapper">
        <div class="container">
            <div class="content_block row no-sidebar single_post">
                <div class="fl-container">
                    <div class="posts-block">
                        <div class="contentarea">
                            <div class="blog_post_preview">
                                <h2 class="blogpost_title">{{ topic.title }} </h2>
                                <div class="blog_post_image">

                                    <img src="{{asset("uplod/images/"~topic.image)}}"  style="
                                width: 200px;
                                " alt="" />
                                    <br>
                                    <br>
                                </div>
                                <div class="blog_content clearfix">
                                    <div class="listing_meta">
                                        <span><i class="fa fa-calendar-check-o"></i>{{ topic.date|date("Y-m-d") }}</span>
                                        {% if topic.user is not null %}
                                            {% set username = topic.user.username %}
                                        {% else %}
                                            {% set username = 'discutea.forum.deleted.user'|trans %}
                                        {% endif %}
                                        <span><i class="fa fa-user"></i><a href="javascript:void(0);">{{ username }}</a></span>
                                        <span><i class="fa fa-clock-o"></i>{{ topic.date|date("H:i") }}</span>

                                        {% set posts_count = topic.posts|length %}

                                        {% if posts_count >= 1 %}
                                        <span><i class="fa fa-comments-o"></i><a href="javascript:void(0);">{{ posts_count }} Commenttaires</a></span>
                                        {% else %}<span><i class="fa fa-comments-o"></i><a href="javascript:void(0);">0 Commenttaires</a></span>
                                        {% endif %}


                                    </div>
                                    <p>

                                        {% if topic.posts.last.poster is not null %}
                                            {% set username = topic.posts.last.poster.username %}
                                        {% else %}
                                            {% set username = 'discutea.forum.deleted.user'|trans %}
                                        {% endif %}


                                            <span><i class="fa fa-user"></i><a href=""> Dernière Mise à jour par : {{ username }}</a></span><br>
                                            <span><i class="fa fa-calendar-check-o"></i>{{ topic.posts.last.date|date("Y-m-d") }}</span><br>
                                            <span><i class="fa fa-clock-o"></i>{{ topic.posts.last.date|date("H:i") }}</span>




                                    </p>
<br><br>

                                </div>
                            </div>
<br><br><br>

                            <div class="row">
                                <div class="col-sm-12 module_cont module_feature_posts pb0">
                                    <center> <h4>Les sujets les plus récents</h4></center>
                                    <div class="items4 featured_posts clearfix">
                                        {% for la in last %}
                                        <div class="featured_item">
                                            <div class="featured_img">
                                                <a href="{{ path('discutea_forum_post', {'slug': la.slug}) }}"><img alt="" src="{{asset("uplod/images/"~la.image)}}" /></a>
                                            </div>
                                            <div class="featured_item_descr">
                                                <h6><a href="{{ path('discutea_forum_post', {'slug': la.slug}) }}">{{ la.title }}</a></h6>
                                                {% set posts_count = la.posts|length %}

                                                <div class="featured_meta">{{ la.date|date("Y-m-d") }}&nbsp;&nbsp;/&nbsp;&nbsp;<a href="javascript:void(0);">{{ posts_count }} commentaires</a></div>
                                            </div>
                                        </div>

                                      {% endfor %}

                                    </div>
                                </div>
                            </div>

                            <div id="comments" style="
    padding-bottom: 0px;
">
                                <h4>Liste des commentaires<span class="color">({{ posts_count }})</span></h4>
                                <ol class="commentlist">
                                    <li class="comment">

                                        <ul>


                                            {% for post in posts %}{% include 'DForumBundle::Post/single-post.html.twig' %}{% endfor %}
                                            {% if postpreview %}{% include 'DForumBundle::Post/preview-post.html.twig' %}{% endif %}
                                            {% if is_granted('CanEditTopic', topic) %}{% include 'DForumBundle::label.html.twig' %}{% endif %}


                                        </ul>
                                    </li>

                                </ol>


                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if form is not null %}
          {#}  <h5> Tire du Sujet : {{ topic.title }}</h5>{#}
            {% if date(topic.lastpost) < date('-1month') %}
                <div class="alert alert-danger text-center" role="alert">{{ 'discutea.forum.post.aged'|trans }}</div>
            {% endif %}
            {% include 'DForumBundle::Form/Post.html.twig' %}
        {% endif %}
    </div>
    <br>
    <br>
    <br>
    <br>
{% endblock %}






