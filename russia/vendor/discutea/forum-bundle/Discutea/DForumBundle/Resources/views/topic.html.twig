{% block body %}
  <div class="wrapper">
    <div class="container">
      <div class="content_block row no-sidebar">
        <div class="page_title">
          <h1>{{ forum.name }}</h1>
          <br>
          <h5>({{ pagination.getTotalItemCount }} Sujets)</h5>
          <div class="icon_divider"></div>
          <p class="text-center">{{ forum.description }}</p>
        </div>


          {{ knp_pagination_render(pagination) }}
          {% for topic in pagination %}

        <div class="fl-container">
          <div class="posts-block portfolio-block">
            <div class="contentarea">
              <!-- Filter_block -->

              <!-- //Filter_block -->
              <div class="row">
                <div id="list" class="sorting_block image-grid column1">
                  <div class="pt30">
                    <div class="col-sm-12 branding webui element">
                      <div class="portfolio_item">
                        <div class="row">
                          <div class="col-sm-6">
                            <div class="portf_img">
                              <a href="{{ path('discutea_forum_post', {'slug': topic.slug}) }}">
                                <img alt="" src="{{asset("uplod/images/"~topic.image)}}"  style="
                                width: 500px;
                                " />
                              </a>
                            </div>
                          </div>
                          <div class="col-sm-6">
                            <h5 class="portf_title"><a href="{{ path('discutea_forum_post', {'slug': topic.slug}) }}">{{ topic.title }}</a></h5>
                            <div class="listing_meta">
                              <span><i class="fa fa-calendar-check-o"></i>{{ topic.date|date("Y-m-d") }}</span>
                              <span><i class="fa fa-bookmark-o"></i><a href="javascript:void(0);">{{ topic.title }}</a></span>
                                {% if topic.user is not null %}
                                    {% set username = topic.user.username %}
                                {% else %}
                                    {% set username = 'discutea.forum.deleted.user'|trans %}
                                {% endif %}
                              <span><i class="fa fa-user"></i><a href="">{{ username }}</a></span>
                              <span><i class="fa fa-clock-o"></i>{{ topic.date|date("H:i") }}</span>
                            </div>
                            <div class="content_info">
                                {% set posts_count = topic.posts|length %}
                              <p><span class="badge">{{ posts_count }} {% if posts_count > 1 %}{{ 'discutea.forum.posts'|trans }}{% else %}{{ 'discutea.forum.post'|trans }}{% endif %}</span></p>
                              <p style="color: #009900;font-weight: bold;" >
                                  {% if topic.resolved == true %}<br />{{ 'discutea.forum.label.issolved'|trans }}{% endif %}
                                  {% if topic.pinned == true %}<br />{{ 'discutea.forum.label.ispinned'|trans }}{% endif %}
                                  {% if topic.closed == true %}<br />{{ 'discutea.forum.label.isclosed'|trans }}{% endif %}
                              </p>




                                {% if topic.posts.last.poster is not null %}
                                    {% set username = topic.posts.last.poster.username %}
                                {% else %}
                                    {% set username = 'discutea.forum.deleted.user'|trans %}
                                {% endif %}
                              <a class="lastComment" href="{{ path('discutea_forum_post', {'slug': topic.slug}) }}">

                                <span><i class="fa fa-user"></i><a href=""> Dernière Mise à jour par : {{ username }}</a></span><br>
                                <span><i class="fa fa-calendar-check-o"></i>{{ topic.posts.last.date|date("Y-m-d") }}</span><br>
                                <span><i class="fa fa-clock-o"></i>{{ topic.posts.last.date|date("H:i") }}</span>

                              </a>



                                {% if is_granted('CanEditTopic', topic) %}
                                  <div class="row admin">
                                    <ul class="pull-right list-inline">
                                      <li><a id="{{ topic.id }}" class="editAction" href="{{ path("discutea_forum_topic_edit", {'id': topic.id}) }}"><i class="glyphicon glyphicon-edit"></i> {{ 'discutea.forum.edit'|trans }}</a></li>
                                      <li><a href="{{ path('discutea_forum_topic_delete', {'id': topic.id}) }}"><i class="glyphicon glyphicon-remove"></i> {{ 'discutea.forum.remove'|trans }}</a></li>
                                    </ul>
                                  </div>
                                {% endif %}



                            </div>
                            <a class="blog_post_readmore" {{ path('discutea_forum_post', {'slug': topic.slug}) }}>Read More<i class="fa fa-angle-double-right"></i></a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="clear"></div>
              </div>


            </div>
          </div>
        </div>
          {% else %}
            <div class="list-group-item text-center"><h5>{{ 'discutea.forum.null'|trans }}</h5></div>
          {% endfor %}

<div></div>
      </div>
    </div>
  </div>




    {{ knp_pagination_render(pagination) }}

  {% if form is not null %}{% include 'DForumBundle:Form:Topic.html.twig' %}<br><br><br><br>{% endif %}
  <br>
  <br>
  <br>
{% endblock %}
