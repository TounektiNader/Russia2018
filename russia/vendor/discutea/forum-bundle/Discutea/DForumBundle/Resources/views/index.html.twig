{% block body %}


    <div class="wrapper">


            <div class="left-sidebar-block" style="    top: 300px;left: 50px;">

                <div class="sidepanel widget_categories">
                    <h6 class="title">Categories</h6>
                    <ul>
                        <li class="cat-item"><a href="{{ path('discutea_forum_homepage') }}">Russia 2018</a></li>
                        <li class="cat-item"><a href="{{ path('discutea_forum_homepage2') }}">Football</a></li>

                    </ul>
                </div>

                <div class="sidepanel widget_posts">
                    <h6 class="title">Derniers Sujets</h6>
                    <ul class="recent_posts">
                        {% for la in last %}
                            <li class="with_img">
                                <div class="recent_posts_content">
                                    <img src="{{asset("uplod/images/"~la.image)}}" alt="" />
                                    <a href="{{ path('discutea_forum_post', {'slug': la.slug}) }}" class="title">{{ la.title }}</a>
                                    <div class="recent_posts_info">{{ la.date|date("Y-m-d") }}</div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

            </div>



        <div class="container">



            <div class="content_block row left-sidebar">



                <div class="page_title">
                    <h1 style=" width: 850px;">{{ 'discutea.forum.forumlist'|trans }}</h1>
                    <div class="icon_divider"></div>
                    <p style="width: 850px;">Le forum vous donne l'occasion de debattre des sujets divers en relation au coupe de monde Russie 2018 ou Football générale et de échanger les avis et les commentaires entre divers internautes et interessés.</p>
                </div>

                <div class="fl-container hasLS">
                    <div class="row">
                        <div class="posts-block hasLS">
                            {% for category in categories if is_granted('CanReadCategory', category) %}
                            <div class="contentarea">

                                    <div class="row">

                                        {% for forum in category.forums %}

                                        <div class="col-sm-12 module_cont module_blog">
                                            <div class="blog_post_preview format-image">
                                                <div class="postformats_cont blog_post_image">

                                                    <a href=""><img src="{{asset("uplod/images/"~forum.image)}}" alt="" style=" width: 500px;"/></a>
                                                    <a id="zoom_product" href="{{asset("uplod/images/"~forum.image)}}" class="photozoom view_link"></a>

                                                </div>
                                                <div class="blog_content clearfix">
                                                    <div class="listing_meta">
                                                        {% set lastTopic = dfLastTopicInForum(forum) %}
                                                        {% if lastTopic is not null %}
                                                        {% if lastTopic.posts.last.poster is not null %}
                                                            {% set username = lastTopic.posts.last.poster.username %}
                                                        {% else %}
                                                            {% set username = 'discutea.forum.deleted.user'|trans %}
                                                        {% endif %}
                                                         <span><i class="fa fa-calendar-check-o"></i>{{ lastTopic.posts.last.date|date("Y-m-d") }} </span>
                                                        <span><i class="fa fa-clock-o" aria-hidden="true"></i>{{ lastTopic.posts.last.date|date("H:i") }} </span>
                                                             <span><i class="fa fa-user" aria-hidden="true"></i> <a class="lastComment" href="{{ dfLastPostPages(lastTopic.posts.last) }}">
                                          {{ 'discutea.forum.lastpostby'|trans }}  {{ username }}</a></span>


                                                        {% else %}
                                                            <p>{{ 'discutea.forum.null'|trans }}</p>
                                                        {% endif %}
                                                    </div>
                                                    <h5 class="blogpost_title"><a href="{{ path('discutea_forum_topic', {'slug': forum.slug}) }}" title="{{ forum.name }}">{{ forum.name }}.</a></h5>
                                                    <p>{{ forum.description }}</p>
                                                    <a class="blog_post_readmore" href="{{ path('discutea_forum_topic', {'slug': forum.slug}) }}" title="{{ forum.name }}">Read More<i class="fa fa-angle-double-right"></i></a>
                                                </div>
                                            </div>


                                        </div>


                                        {% endfor %}
                                    </div>


                            </div>
                                <p class="text-center"><a class="btn btn-primary" href="{{ path('discutea_forum_create_forum', {'id': category.id}) }}">{{ 'discutea.forum.category.addforum'|trans }}</a></p>
                            {% endfor %}


                        <div class="navigation" >
                            {{ knp_pagination_render(categories) }}
                        </div>

                        </div>
                    </div>

              </div>
        </div>

    </div>
 </div>



{% endblock %}
