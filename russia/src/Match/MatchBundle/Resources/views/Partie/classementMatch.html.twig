{% block body %}


    <br>
    <br>


    <div ng-app="myApp" ng-controller="controller">
        <div class="container">



            <div class="page_title">
                <h1><span style="    color: #007edc;">Classement Par Groupe </span> Coupe du monde 2018</h1>
                <div class="icon_divider"></div>
                <p>Au fur et à mesure de déroulement des matchs programmés au coupe du monde Russie 2018 , vous trouverez les résultats, les classments,et le programme des équipes par groupe</p>
            </div>


            <div class="nav-gp">
                <a href="{{ path('classementGroupe',{'groupe':'A'}) }}" title="Groupe A">A</a>
                <a href="{{ path('classementGroupe',{'groupe':'B'}) }}" title="Groupe B">B</a>
                <a href="{{ path('classementGroupe',{'groupe':'C'}) }}" title="Groupe C">C</a>
                <a href="{{ path('classementGroupe',{'groupe':'D'}) }}" title="Groupe D">D</a>
                <a href="{{ path('classementGroupe',{'groupe':'E'}) }}" title="Groupe E">E</a>
                <a href="{{ path('classementGroupe',{'groupe':'F'}) }}" title="Groupe F">F</a>
                <a href="{{ path('classementGroupe',{'groupe':'G'}) }}" title="Groupe G">G</a>
                <a href="{{ path('classementGroupe',{'groupe':'H'}) }}" title="Groupe H">H</a>
            </div>

            <table class="tab-classement">
                <thead>
                <tr>
                    <th><abbr title="Position">Pl</abbr>  </th>
                    <th class="clmt-team"><abbr>Équipes</abbr></th>
                    <th class="clmt-pts"><abbr title="Points gagnés">Pts</abbr></th>
                    <th><abbr title="Matches joués">J</abbr></th>
                    <th class="hide-mob"><abbr title="Matches gagnés">V</abbr></th>
                    <th class="hide-mob"><abbr title="Matches nuls">N</abbr></th>
                    <th class="hide-mob"><abbr title="Matches perdus">D</abbr></th>
                    <th class="hide-mob"><abbr title="Buts marqués">BP</abbr></th>
                    <th class="hide-mob"><abbr title="buts encaissés">BC</abbr></th>
                    <th><abbr title="Différence de buts (BP-BC)">Diff.</abbr></th>

                </tr>
                </thead>
                {% set var =0 %}
                <tbody>

                {% for equipe in equipes %}
                    <tr class="ligne2">



                        <td class="clmt-pos">{{ var+1 }}</td>
                        {% set var =var+1 %}
                        <td class="clmt-team">
                            <a href="" title="Russie" target="_top">
                                <svg class="flags"><img src="http://localhost/russia/web/public/images/{{ equipe.drapeau }}" height="30" width="30"></svg>
                                <span class="country">{{ equipe.nomequipe }}</span></a></td>
                        <td class="clmt-pts">{{ equipe.nombrepoints }}</td>
                        <td>{{ equipe.matchjouee }}</td>
                        <td class="hide-mob">{{ equipe.matchgagne }}</td>
                        <td class="hide-mob">{{ equipe.matchnull }}</td>
                        <td class="hide-mob">{{ equipe.matchperdu }}</td>
                        <td class="hide-mob">{{ equipe.butmarque }}</td>
                        <td class="hide-mob">{{ equipe.butencaisse }}</td>

                        {% set res = ( equipe.butmarque - equipe.butencaisse ) %}

                        <td class="hide-mob">{{ res}}</td>

                    </tr>
                {% endfor %}


                </tbody>
            </table>

            {% for partie in parties %}
                <div class="tab-calendar p1">
                    <time datetime="2018-06-14T00:00:00" class="mdate firsth"> {{ partie.idpartie.datepartie|date('Y-m-d') }} </time>
                    <div itemscope itemtype="http://schema.org/SportsEvent">
                        <meta itemprop="description" content="Coupe du monde 2018 FIFA">
                        <meta itemprop="startDate" content="2018-06-14T17:00">
                        <meta itemprop="name" content="17:00 : Russie vs Arabie Saoudite">
                        <div class="line-tab-match"> <div class="tab-team tab-dom">
                                <a href="/equipes/russie" title="{{ partie.idpartie.home.nomequipe }}">
                                    <svg class="flags"><img src="http://localhost/russia/web/public/images/{{ partie.idpartie.home.drapeau }}" width="30" height="30"></svg>
                                    <span class="country">{{ partie.idpartie.home.nomEquipe }}</span>
                                </a>
                            </div>
                            <div class="tab-score"><a href="" class="cal-hour" title="Début du match à {{ partie.idpartie.heurepartie }}" itemprop="url">
                               {% if partie.idpartie.etatmatch=="PasEncore" %}
                                    <time datetime="2018-06-14T17:00:00">{{ partie.idpartie.heurepartie }}</time>
                                {% else %}
                                    <time datetime="2018-06-14T17:00:00">{{ partie.buthome }}/ {{ partie.butaway }}</time>
                                   {% endif %}
                                </a>
                            </div>
                            <div class="tab-team tab-ext">
                                <a href="/equipes/arabie-saoudite" title="{{ partie.idpartie.away.nomequipe }}">
                                    <svg class="flags"><img src="http://localhost/russia/web/public/images/{{ partie.idpartie.away.drapeau }}" width="30" height="30"></svg>
                                    <span class="country">{{partie.idpartie.away.nomEquipe }}</span>
                                </a>
                            </div>
                        </div>
                        {% set betJoue= 0 %}
                        {% for bet in bets  %}
                        {% if bet.idpartie==partie.idpartie %}
                            {% set betJoue= 1 %}
                           {% endif  %}
                        {% endfor %}

                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}

                        <div class="line-timer">
                            <div class="tab-timer avant">

                                {% if betJoue ==1 %}

                                <a href="" class="bt-paris" title="Parier sur ce match" onclick="refuseRefuse()"  > PARIEZ </a>
                                {% else  %}
                                     {% if partie.idpartie.etatMatch=='Jouee' %}
                                    <a href="" class="bt-paris" title="Parier sur ce match" onclick="refuse()"  > PARIEZ </a>
                                {% else %}
                                    <a href="{{ path('insertBet',{'id':partie.idpartie.id}) }}" class="bt-paris" title="Parier sur ce match"  > PARIEZ </a>
                                {% endif %}
                                {% endif %}



                            </div>
                        </div>

                        {% else  %}


                            <div class="line-timer">
                                <div class="tab-timer avant">
                                    <a href="{{ path('fos_user_security_login')}}" class="bt-paris" title="Parier sur ce match"  > PARIEZ </a>

                                </div>
                            </div>


                        {% endif %}

                        <div class="tab-line-infos">
                            <div class="tab-group"> <span class="num">N°{{ partie.idpartie.id }}</span>
                            </div>
                            <div class="tab-tv">
                                <a> <img src="//static.ruedufootball.com/images/tv/bein.png" alt="Diffusion TV"/></a> </div>
                            <div class="tab-gps" itemprop="location" itemscope itemtype="http://schema.org/Place">
                                <meta itemprop="name" content="Moscou">
                                <meta itemprop="url" content="/russie2018/stades">
                                <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                                    <meta itemprop="addressLocality" content="Moscou">
                                    <meta itemprop="url" content="/russie2018/stades#moscou"> </div>
                                <svg><img src="http://localhost/russia/web/uploads/images/{{partie.idpartie.idstade.photostade}}" height="50" width="50"> </svg>
                                <a href="" class="cal-stade" title="Moscou">{{ partie.idpartie.idstade.nomstade }}</a> </div> </div> </div>
                </div>
                {% set betJoue= 0 %}

            {% endfor %}


        </div>
    </div>


    <br>
    <br>


    <script type="text/javascript">
        function refuse(){


            swal ( "Impossible" ,  "Le match a été Terminée" ,  "error" );



        }


        function refuseRefuse(){


            swal ( "Impossible" ,  "Vous avez jouée ce Match" ,  "error" );



        }


    </script>



{% endblock %}