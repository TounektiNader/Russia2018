{% extends 'baseadmin.html.twig' %}

    {% block style %}
        {{ parent() }}
    {% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}

 {% block body %}

     <!-- Content Wrapper. Contains page content -->
     <div class="content-wrapper">
         <!-- Content Header (Page header) -->
         <section class="content-header">
             <h1>
                 Formulaire D'ajout d'une nouvelle actualité

             </h1>
             <ol class="breadcrumb">
                 <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
                 <li><a href="#">Actualités</a></li>
                 <li class="active">Ajouter une actualité</li>
             </ol>
         </section>

         <!-- Main content -->
         <section class="content">
             <div class="row">
                 <!-- left column -->
                 <div class="col-md-12">
                     <!-- general form elements -->
                     <div class="box box-primary">
                         <div class="box-header with-border">
                             <h3 class="box-title">Formulaire</h3>
                         </div>
                         <!-- /.box-header -->
                         <!-- form start -->
                         {{form_start(form)}}
                         <div class="box-body">
                             <div class="form-group">
                                 {{ form_row(form.titre, { 'attr': {'class': 'form-control'} }) }}
                             </div>
                             <div class="form-group">
                                 {{ form_row(form.texte, { 'attr': {'class': 'form-control'} }) }}
                             </div>

                             <div class="form-group">

                                 {{ form_row(form.file2, { 'attr': {'class': 'form-control'} }) }}
                                 <img name="images" src="{{ form_row(form.file2)}}"/><br/>
                             </div>

                         </div>
                         <!-- /.box-body -->

                         <div class="box-footer">
                             <input type="submit" class="btn btn-primary" value="Enregistrer">

                         </div>


                     </div>

                     <!-- /.box -->

                     <!-- Form Element sizes -->

                     <!-- /.box -->


                     <!-- /.box -->

                     <!-- Input addon -->

                     <!--/.col (left) -->
                     <!-- right column -->

                     <!--/.col (right) -->
                 </div>
             </div>
             <!-- /.row -->
         </section>
         <!-- /.content -->
     </div>

 {% endblock %}
 {% block footer %}
     {{ parent() }}
 {% endblock %}
