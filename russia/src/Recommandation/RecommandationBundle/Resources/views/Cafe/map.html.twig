{% extends ':AdminLTE-2.4.3:baseadmin.html.twig' %}
{% block style %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}

 {% block body %}


     <!-- Content Wrapper. Contains page content -->
     <div class="content-wrapper">
         <!-- Content Header (Page header) -->
         <section class="content-header">
             <ol class="breadcrumb">
                 <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
                 <li><a href="{{ path('affichecafeadmin') }}">cafes</a></li>
                 <li class="active">Ajout d'un café</li>
             </ol>
         </section>

         <!-- Main content -->
         <section class="content">
             <div align="" class="row">
                 <!-- left column -->
                 <div class="col-md-6">
                     <!-- general form elements -->
                     <div class="box box-primary">
                         <div class="box-header with-border">
                             <h3 class="box-title">Ajout d'un nouveau café</h3>
                         </div>
                         <!-- /.box-header -->
                         <!-- form start -->
                         <form name="form" method="post" enctype="multipart/form-data">
                             <div class="box-body">
                                 <div class="form-group">
                                     <label for="exampleInputEmail1">Nom</label>
                                     <input class="form-control" placeholder="Nom" type="text" id="form_nomcafe" name="form[nomcafe]" required="required" maxlength="50">
                                 </div>
                                 <div class="form-group">
                                     <label for="exampleInputEmail1">Détails</label>
                                     <textarea class="form-control" placeholder="Détails" id="form_detailscafe" name="form[detailscafe]" required="required" cols="20" rows="5"></textarea>
                                 </div>
                                 <div class="form-group">
                                     <label for="exampleInputEmail1">Position</label>
                                     <input type="text" class="form-control" placeholder="Position" id="form_positioncafe" name="form[positioncafe]" required="required" maxlength="50">
                                 </div>
                                 <div class="form-group">
                                     <label for="exampleInputFile">Photo</label>
                                     {{ form_row(form.photocafe)}}
                                     <p class="help-block">Sélectionnez une image JPG.</p>
                                 </div>
                                 <div class="form-group">
                                     <label for="exampleInputPassword1">Ville</label>
                                     <select class="form-control" id="form_idville" name="form[idville]"><option value="1">Iekaterinbourg</option><option value="2">Kaliningrad</option><option value="3">Kazan</option><option value="4">Moscou</option><option value="5">Nijni Novgorod</option><option value="6">Rostov-sur-le-Don</option><option value="7">Saint-Petersbourg</option><option value="8">Samara</option><option value="9">Saransk</option><option value="10">Sotchi</option><option value="11">Volgograd</option><option value="13">Zaouiet Sousse</option><option value="14">Cité Riadh</option></select>
                                 </div>
                             </div>
                             <!-- /.box-body -->
                             <div class="box-footer">
                                 <button class="btn btn-primary" type="submit" id="form_Ajouter" name="form[Ajouter]">Ajouter</button>
                             </div>
                             <input type="hidden" id="form__token" name="form[_token]" value="rbXELv50Z9IaC0YJWxaTFfb3tPO71E05IBgl5BlkUHs">
                         </form>
                     </div>
                     <!-- /.box -->

                         <!-- /.box-body -->
                     </div>
                     <!-- /.box -->
                 </div>
         </section>
         <!-- /.content -->
     </div>
     <!-- /.content-wrapper -->
 {% endblock %}
 {% block footer %}
     {{ parent() }}
 {% endblock %}