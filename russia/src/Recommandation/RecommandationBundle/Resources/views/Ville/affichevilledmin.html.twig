{% extends 'baseadmin.html.twig' %}{% block style %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}

 {% block body %}


     <!-- Content Wrapper. Contains page content -->
     <div class="content-wrapper">
         <!-- Content Header (Page header) -->
         <section class="content-header">
             <h1>
                 Liste des villes

             </h1>
             <ol class="breadcrumb">
                 <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
                 <li><a href="#">villes</a></li>
                 <li class="active">Liste des villes</li>
             </ol>
         </section>

         <!-- Main content -->
         <section class="content">
             <div class="row">

                 <div class="col-xs-12">
                     <!-- /.box -->

                     <div class="box">
                         <div class="box-header">
                             <center><a title="Ajouter" href="{{ path('ajoutville') }}"><i class="ion-android-add-circle"></i>&nbsp&nbsp Ajouter une nouvelle ville</a></center>
                         </div>
                         <!-- /.box-header -->
                         <div class="box-body">
                             <table id="example1" class="table table-bordered table-striped">
                                 <thead>
                                 <tr>
                                     <th>Nom</th>
                                     <th>Logo</th>
                                     <th>Fondation</th>
                                     <th>Population</th>
                                     <th>Timezone</th>
                                     <th>Equipe locale</th>
                                     <th>Logo Ã©quipe</th>
                                     <th>Position</th>
                                     <th>Photo</th>
                                     <th></th>
                                 </tr>
                                 </thead>
                                 <tbody>
                                 {% for ville in villes %}
                                     <tr>
                                         <td align="center">{{ ville.nomville }}</td>
                                         <td align="center"><img src="{{ asset('uploads/images/' ~ ville.logoville) }}" height="100px" width="100px"></td>
                                         <td align="center">{{ ville.fondationville }}</td>
                                         <td align="center">{{ ville.populationville }}</td>
                                         <td align="center">{{ ville.timezone }}</td>
                                         <td align="center">{{ ville.equipelocale }}</td>
                                         <td align="center"><img src="{{ asset('uploads/images/' ~ ville.logoequipe) }}" height="100px" width="100px"></td>
                                         <td align="center">{{ ville.coordonnees }}</td>
                                         <td align="center"><img src="{{ asset('uploads/images/' ~ ville.photoville) }}" height="100px" width="150px"></td>
                                         <td align="center">
                                             <a title="Modifier" href="{{ path('updateville',{'id':ville.idville}) }}">&nbsp&nbsp<i class="ion-edit"></i></a>
                                             &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                             <a onclick="return confirm('Voulez vous vraiment supprimer cette ville?')" title="Supprimer" href="{{ path('deleteville',{'id':ville.idville}) }}">&nbsp&nbsp<i class="ion-trash-b"></i></a>
                                         </td>
                                     </tr>
                                 {% endfor %}
                                 </tbody>
                             </table>
                         </div>
                         <!-- /.box-body -->
                     </div>
                     <!-- /.box -->
                 </div>
                 <!-- /.col -->
             </div>
             <!-- /.row -->
         </section>
         <!-- /.content -->
     </div>
     <!-- /.content-wrapper -->
 {% endblock %}
 {% block footer %}
     {{ parent() }}
 {% endblock %}
