{% block body %}
<div class="wrapper">
    <div class="container">
        <div class="content_block row right-sidebar">
            <div class="page_title">
                <h1>Tous Les Cadeaux</h1>
                <div class="icon_divider"></div>
            </div>

            <div class="fl-container hasRS">
                <div class="posts-block">
                    <div class="contentarea shop_list">

                        <div class="shop_list_item">
                            <div class="items3">
                                <ul class="item_list">
                                    {% for cadeau in cadeaus %}
                                    <li>
                                        <div class="item">
                                            <div class="shop_list_product_image">
                                                <a class="shop_list_product_image" href="shop_product.html">
                                                    <img style="height: 100px;width: 275px;" src={{ asset('uploads/images/' ~ cadeau.image) }} alt="" />
                                                </a>
                                            </div>
                                            <div class="shop_list_info">
                                                <h6><a href="shop_product.html">{{ cadeau.type }}</a></h6>
                                                <div class="shop_list_cat">
                                                    <i class="fa fa-bookmark-o"></i>
                                                    <a href="javascript:void(0);">{{ cadeau.categorie }}</a>


                                                </div>
                                                <div class="clearfix shop_list_details">
                                                    <span class="price color pull-left">{{ cadeau.jeton }}</span>

                                                    <a onclick="myFunction({{ cadeau.jeton }})" class="add_to_cart_button pull-right" href={{ path('AjouterRecompense',{'id':cadeau.idcadeau}) }}><i class="fa fa-shopping-cart"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>



                    </div>
                </div>
            </div>
            <div class="right-sidebar-block">
                <div class="sidepanel widget_tag_cloud">
                    <h6 class="title">Popular Tags</h6>
                          {% for tagss in tags %}
                    <div class="tagcloud">
                        <a href={{ path('CadeauTag',{'id':tagss.id}) }}>{{ tagss.name }}</a>

                    </div>
                              {% endfor %}
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
