{% extends 'baseadmin.html.twig' %}
{% block style %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}

 {% block body %}


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Liste des cadeaux

            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
                <li><a href="#">Cadeau</a></li>
                <li class="active">Liste des Cadeaux</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">

                    <!-- /.box -->

                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title"></h3>
                        </div>
                        <!-- /.box-header -->
                        <a button="" type="button" class="btn btn-block btn-success btn-lg" href="{{ path('AjouterModele') }}"> <img src="/ajouter.png" height="20" width="20">Ajouter Cadeau </a>
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">

                                <thead>
                                <tr>
                                    <th>Id Cadeau</th>
                                    <th>Categorie</th>
                                    <th>Type</th>
                                    <th>Jeton</th>
                                    <th>Image</th>
                                    <th>Suppression</th>
                                    <th>Modification</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for cadeau in cadeaus %}
                                    <tr>
                                        <td>{{ cadeau.idcadeau }}</td>
                                        <td>{{ cadeau.categorie }}</td>
                                        <td>{{ cadeau.Type }}</td>
                                        <td>{{ cadeau.jeton }}</td>
                                        <td><img src="{{ asset('uploads/images/' ~ cadeau.image) }}" height="50px" width="50px"></td>
                                        <td>
                                            <a href="{{ path('Delete_Cadeau',{'id':cadeau.idcadeau})}}">Supprimer</a>

                                        </td>
                                        <td><a href="{{ path('Update_Cadeau',{'id':cadeau.idcadeau})}}">Modifier</a></td>

                                    </tr>
                                {% endfor %}
                                </tbody>


                                <tfoot>
                                <th>Categorie</th>
                                <th>Type</th>
                                <th>Jeton</th>
                                <th>Image</th>
                                <th>Modification</th>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
 {% endblock %}
 {% block footer %}
     {{ parent() }}
 {% endblock %}
