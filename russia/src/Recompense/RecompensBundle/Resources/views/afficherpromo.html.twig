{% extends 'baseadmin.html.twig' %}
{% block style %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}

 {% block body %}


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Liste des cadeaux

            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
                <li><a href="#">Promotion</a></li>
                <li class="active">Liste des Coupons</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">

                    <!-- /.box -->

                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title"></h3>
                        </div>
                        <!-- /.box-header -->
                        <a button="" type="button" class="btn btn-block btn-success btn-lg" href="{{ path('AjouterPromo') }}"> <img src="/ajouter.png" height="20" width="20">Ajouter Promotion </a>

                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Id Promotion</th>
                                    <th>Coupon</th>
                                    <th>Pourcentage</th>
                                    <th>Date d'expiration</th>
                                    <th>Suppression</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for cadeau in cadeaus %}
                                    <tr>
                                        <td>{{ cadeau.id }}</td>
                                        <td>{{ cadeau.coupon }}</td>
                                        <td>{{ cadeau.promotion }} %</td>
                                        <td>{{ cadeau.expiration.date }}</td>

                                        <td>
                                            <a href="{{ path('Delete_Promo',{'id':cadeau.id})}}">Supprimer</a>

                                        </td>


                                    </tr>
                                {% endfor %}
                                </tbody>


                                <tfoot>
                                <th>Id Promotion</th>
                                <th>Coupon</th>
                                <th>Pourcentage</th>
                                <th>Date d'expiration</th>
                                <th>Suppression</th>

                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
 {% endblock %}
 {% block footer %}
     {{ parent() }}
 {% endblock %}
