{% extends 'baseadmin.html.twig' %}

    {% block style %}
        {{ parent() }}
{% endblock %}
{% block header %}
{{ parent() }}
{% endblock %}

 {% block body %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Formulaire D'ajout du coupon

            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
                <li><a href="#">Cadaeau</a></li>
                <li class="active">Ajouter une promotion</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Formulaire</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        {{form_start(form)}}
                            <div class="box-body">
                                <div class="form-group">
                                    {{ form_row(form.coupon, { 'attr': {'class': 'form-control'} }) }}
                                </div>

                                <div class="form-group">
                                    {{ form_row(form.promotion, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.expiration, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.captcha, { 'attr': {'class': 'form-control'} }) }}
                                </div>


                            </div>
                            <!-- /.box-body -->

                            <div class="box-footer">
                                <input type="submit" class="btn btn-primary" value="Enregistrer">

                            </div>

                        {{form_end(form)}}
                    </div>
                    <!-- /.box -->

                    <!-- Form Element sizes -->

                    <!-- /.box -->


                    <!-- /.box -->

                    <!-- Input addon -->

                <!--/.col (left) -->
                <!-- right column -->

                <!--/.col (right) -->
            </div>
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>

 {% endblock %}
