                                 {{ form_row(form.prenomjoueur,{'attr':{'class': 'form-control'} }) }}
                             </div>
                             <div class="form-group">
                                 {{ form_row(form.postion,{'attr':{'class': 'form-control'} }) }}
                             </div>
                             <div class="form-group">
                                 {{ form_row(form.idequipe,{'attr':{'class': 'form-control'} }) }}
                             </div>

                             <div class="box-footer">
                                 <a href="{{ path('_afficher_joueurs') }}">Tableaux des joueurs</a>
                             </div>
                         </div>

                         {{ form_end(form) }}
                         <br> <br>
                         <form method="post">
                             <input type="file" name="worksheet" id="worksheet">
