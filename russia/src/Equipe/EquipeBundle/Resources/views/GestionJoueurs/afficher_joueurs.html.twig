{% extends 'baseadmin.html.twig' %}
{% block style %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}

 {% block body %}


     <!-- Content Wrapper. Contains page content -->
     <div class="content-wrapper">
         <!-- Content Header (Page header) -->
         <section class="content-header">
             <h1>
                 Liste des Joueurs

             </h1>
             <ol class="breadcrumb">
                 <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
                 <li><a href="#">Equipes</a></li>
                 <li class="active">Liste d'equipe</li>
             </ol>
         </section>

         <!-- Main content -->
         <section class="content">
             <div class="row">
                 <div class="col-xs-12">

                     <!-- /.box -->

                     <div class="box">
                         <div class="box-header">
                             <h3 class="box-title"></h3>
                         </div>
                         <!-- /.box-header -->
                         <div class="box-body">
                             <table border ="2" id="example1" class="table table-bordered table-striped">
                                 <thead>
                                 <tr>
                                     <div>
                                         <a href="{{ path('_ajouter_joueurs') }}">Ajouter un joueur</a>
                                     </div>
                                     <th>Nom Joueur</th><th>Prenom Joueur</th><th>Position</th><th>Equipe</th><th>Suppression</th><th>Modification</th>
                                 </tr>
                                 </thead>
                                 <tbody>

                                 {% for joueurs in joueurs %}
                                     <tr>

                                         <td>{{ joueurs.nomjoueur }}</td>
                                         <td>{{ joueurs.prenomjoueur }}</td>
                                         <td>{{ joueurs.postion }}</td>
                                         <td>{{ joueurs.idequipe.getNomequipe() }}</td>


                                         <td><a href="{{ path('_supprimer_joueur',{'idjoueur':joueurs.idjoueur}) }}">Supprimer joueur</a> </td>
                                         <td><a href="{{ path('_modifier_joueur',{'idjoueur':joueurs.idjoueur}) }}">modifier joueur</a> </td>

                                     </tr>
                                 {% endfor %}
                                 </tbody>


                                 <tfoot>
                                 <tr>
                                     <th>Nom Joueur</th><th>Prenom Joueur</th><th>Position</th><th>Equipe</th><th>Suppression</th><th>Modification</th>
                                 </tr>
                                 </tfoot>
                             </table>

                         </div>
                         <!-- /.box-body -->
                     </div>
                     <!-- /.box -->
                 </div>
                 <!-- /.col -->
             </div>
             <!-- /.row -->
         </section>
         <!-- /.content -->
     </div>
 {% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}
