{% extends 'baseadmin.html.twig' %}
{% block style %}
    {{ parent() }}
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}

 {% block body %}


     <!-- Content Wrapper. Contains page content -->
     <div class="content-wrapper">
         <!-- Content Header (Page header) -->
         <section class="content-header">
             <h1>
                 Liste des cadeaux

             </h1>
             <ol class="breadcrumb">
                 <li><a href="#"><i class="fa fa-dashboard"></i>Accueil</a></li>
                 <li><a href="#">Equipes</a></li>
                 <li class="active">Liste d'equipe</li>
             </ol>
         </section>

         <!-- Main content -->
         <section class="content">
             <div class="row">
                 <div class="col-xs-12">

                     <!-- /.box -->

                     <div class="box">
                         <div class="box-header">
                             <h3 class="box-title"></h3>
                         </div>
                         <!-- /.box-header -->
                         <div class="box-body">
                            <table border ="2" id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Drapeau</th><th>nomequipe</th><th>entraineur</th><th>continent</th><th>groupe</th><th>nombrepoints</th><th>Suppression</th><th>Modification</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for equipe in equipes %}
                                    <tr>

                                        <td> <img src="{{ asset('public/images/'~equipe.getDrapeau())}}" width="100 px" height="60px" /> </td>
                                        <td>{{ equipe.nomequipe }}</td>
                                        <td>{{ equipe.entraineur }}</td>
                                        <td>{{ equipe.continent }}</td>
                                        <td>{{ equipe.groupe }}</td>
                                        <td>{{ equipe.nombrepoints }}</td>

                                        <td><a href="{{ path('_supprimer_equipe',{'idequipe':equipe.idequipe}) }}">Supprimer equipe</a> </td>
                                        <td><a href="{{ path('_modifier_equipe',{'idequipe':equipe.idequipe}) }}">modifier equipe</a> </td>

                                    </tr>
                                {% endfor %}
                                </tbody>


                                <tfoot>
                                <tr>
                                    <th>nomequipe</th><th>entraineur</th><th>continent</th><th>groupe</th><th>nombrepoints</th><th>Suppression</th><th>Modification</th>
                                </tr>
                                </tfoot>
                            </table>
                            <a href="{{ path('_ajouter_equipe') }}">Ajouter une equipe</a>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}